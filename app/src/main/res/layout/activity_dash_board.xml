<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_bg_five"
    android:orientation="vertical"
    tools:context=".Activity.DashBoardActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/toolbarcolor"
            android:minHeight="?attr/actionBarSize"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="Add Account" />
    </com.google.android.material.appbar.AppBarLayout>

    <!--<include layout="@layout/row_layout_header" />-->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout style="@style/dashboard_linear_layout_style">

                    <androidx.cardview.widget.CardView
                        style="@style/dashboard_circle_cardview_style"
                        android:elevation="12dp"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            style="@style/dashboard_imageview_style"
                            android:src="@drawable/img_title" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        style="@style/dashboard_textview_style"
                        android:text="Title" />
                </LinearLayout>

                <LinearLayout style="@style/dashboard_linear_layout_style">

                    <androidx.cardview.widget.CardView
                        style="@style/dashboard_circle_cardview_style"
                        android:elevation="12dp"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            style="@style/dashboard_imageview_style"
                            android:src="@drawable/img_category_two" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        style="@style/dashboard_textview_style"
                        android:text="Category" />
                </LinearLayout>

                <LinearLayout style="@style/dashboard_linear_layout_style">

                    <androidx.cardview.widget.CardView
                        style="@style/dashboard_circle_cardview_style"
                        android:elevation="12dp"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            style="@style/dashboard_imageview_style"
                            android:src="@drawable/img_payment" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        style="@style/dashboard_textview_style"
                        android:text="Amount" />
                </LinearLayout>

                <LinearLayout style="@style/dashboard_linear_layout_style">

                    <androidx.cardview.widget.CardView
                        style="@style/dashboard_circle_cardview_style"
                        android:elevation="12dp"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            style="@style/dashboard_imageview_style"
                            android:src="@drawable/img_alarm_time" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        style="@style/dashboard_textview_style"
                        android:text="Alarm Time" />
                </LinearLayout>

                <LinearLayout style="@style/dashboard_linear_layout_style">

                    <androidx.cardview.widget.CardView
                        style="@style/dashboard_circle_cardview_style"
                        android:elevation="12dp"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            style="@style/dashboard_imageview_style"
                            android:src="@drawable/img_repeat" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        style="@style/dashboard_textview_style"
                        android:text="Repeat" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <LinearLayout style="@style/dashboard_linear_layout_style">

                    <androidx.cardview.widget.CardView
                        style="@style/dashboard_circle_cardview_style"
                        android:elevation="12dp"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            style="@style/dashboard_imageview_style"
                            android:src="@drawable/img_reminder" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        style="@style/dashboard_textview_style"
                        android:text="Reminder Type" />
                </LinearLayout>


                <LinearLayout style="@style/dashboard_linear_layout_style">

                    <androidx.cardview.widget.CardView
                        style="@style/dashboard_circle_cardview_style"
                        android:elevation="12dp"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            style="@style/dashboard_imageview_style"
                            android:src="@drawable/img_payment_two" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        style="@style/dashboard_textview_style"
                        android:text="Payment Mode" />
                </LinearLayout>

                <LinearLayout style="@style/dashboard_linear_layout_style">

                    <androidx.cardview.widget.CardView
                        style="@style/dashboard_circle_cardview_style"
                        android:elevation="12dp"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            style="@style/dashboard_imageview_style"
                            android:src="@drawable/img_due_date" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        style="@style/dashboard_textview_style"
                        android:text="Due Date" />
                </LinearLayout>

                <LinearLayout style="@style/dashboard_linear_layout_style">

                    <androidx.cardview.widget.CardView
                        style="@style/dashboard_circle_cardview_style"
                        android:elevation="12dp"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            style="@style/dashboard_imageview_style"
                            android:src="@drawable/img_notity_one" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        style="@style/dashboard_textview_style"
                        android:text="Notify in adv." />
                </LinearLayout>

                <LinearLayout style="@style/dashboard_linear_layout_style">

                    <androidx.cardview.widget.CardView
                        style="@style/dashboard_circle_cardview_style"
                        android:elevation="12dp"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            style="@style/dashboard_imageview_style"
                            android:src="@drawable/img_note" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        style="@style/dashboard_textview_style"
                        android:text="Note" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>